@import 'lib';

.filtered-charts {
  display: flex;
}

.filters {
  display: none;
  font-weight: 100;
  height: 100%;
  margin-left: - $min-padding; // Offset .global-wrapper padding-left.
  padding: $lrg-padding $med-padding $med-padding 0;
  width: $filters-width;

  ul {
    list-style: none;
    margin: $min-padding 0 0;
    padding: 0;
  }

  a {
    color: $normal-text;
    font-size: 12px;
    text-decoration: none;
    line-height: 2.5;
    display: block;
    border-radius: 0 4px 4px 0;
    padding: 0 $min-padding 0 0;
    text-align: right;

    &:hover {
      background-image: linear-gradient(90deg, #001021 0%, #00224A 100%);
    }
  }
}

@media $base-tablet {
  .filtered .filters {
    display: block;
  }
}
