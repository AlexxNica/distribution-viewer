@import 'lib';

* {
  box-sizing: border-box;
}

body {
  background-color: $background-color;
  color: $normal-text;
  font-family: helvetica, sans-serif;
  margin: 0;

  &:not(.filtered) {
    padding: 0 $default-whitespace;
  }
}

a {
  color: $mild-blue;
}

.global-wrapper {
  margin: 0 auto;
  max-width: 1400px;
  padding: 10px;

  .filtered & {
    padding: 10px 0 0 $filters-width;
  }
}

.filtered-charts {
  display: flex;

  @media all and (max-width: $min-sidebar-width) {
    display: block;
  }
}

.filters {
  font-weight: 100;
  height: 100%;
  left: 0;
  padding: $header-height 20px 20px 0;
  position: absolute;
  top: 0;
  width: $filters-width;

  @media all and (max-width: $min-sidebar-width) {
    padding: 20px 20px 20px (20px - $mobile-filter-button-padding);
  }

  ul {
    @extends $clearfix;

    list-style: none;
    padding: 0;
    margin: 10px 0 0;
  }

  li {
    @media all and (max-width: $min-sidebar-width) {
      float: left;
      margin: 5px 5px 5px 0;
    }
  }

  a {
    color: $normal-text;
    font-size: 12px;
    text-decoration: none;
    line-height: 2.5;
    display: block;
    border-radius: 0 4px 4px 0;
    padding: 0 10px 0 0;
    text-align: right;

    &:hover {
      background-image: linear-gradient(90deg, #001021 0%, #00224A 100%);
    }

    @media all and (max-width: $min-sidebar-width) {
      display: block;
      padding: $mobile-filter-button-padding;
    }
  }
}

.primary-header {
  display: flex;
  justify-content: space-between;
  height: $header-height;
  padding: 20px;

  > * {
    align-self: center;
  }
  .filtered & {
    @media all and (max-width: $min-sidebar-width) {
      margin: 0 $default-whitespace;
    }
  }
  h1 {
    font-size: 20px;
    font-weight: 200;
    margin: 0;
  }
  .date-range {
    font-size: 12px;
  }
}

.primary-header-link {
  text-decoration: none;

  &:hover {
    border-bottom: 1px solid $mild-blue;
  }
}

.chart-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;

  .chart {
    width: 320px;
    height: 270px;
    position: relative;
    padding-bottom: 40px;
  }
}

.chart-detail {
  .chart {
    height: 60vh;
    margin: $default-whitespace auto;
    width: 100%;
  }
}

.chart-rollover-container {
  background-image: linear-gradient(90deg, #000 0%, #00224A 100%);
  border-radius: 0 4px 4px 0;
  bottom: -15px;
  color: $normal-text;
  display: none;
  font-size: 12px;
  padding: 5px 10px 5px 20px;
  position: absolute;
  right: 10px;
  width: 100%;

  &.show {
    display: flex;
    justify-content: space-between;
  }
  .filtered & {
    bottom: 0;
  }
}

/* Dark Theme MG */
$chart-gray = rgba(255,255,255,0.6);
.chart {
  position: relative;

  .filtered & {
    margin-bottom: 0;
  }
  .mg-x-axis line,
  .mg-y-axis line {
    stroke: $chart-gray;
  }
  .mg-line1-color {
    stroke: $mild-blue;
  }
  .mg-chart-title {
    stroke: none;
    fill: $normal-text;
    font-size: 18px;

    .filtered & {
      font-size: 13px;
    }
  }
  .mg-x-axis,
  .mg-y-axis {
    text {
      fill: $chart-gray;
      font-size: 11px;
    }
  }
  .mg-area1-color {
    fill: $mild-blue;
  }
  .mg-header {
    font-size: inherit;
    transform: translate(0, 15px);
  }
  .mg-active-datapoint-container {
    fill: green;

    text {
      font-size: 11px;
      fill: $normal-text;
    }
  }
}
/* End Dark Theme MG */
