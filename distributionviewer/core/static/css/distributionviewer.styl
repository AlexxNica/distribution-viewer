$background-color = #fff;
$normal-text = rgba(0,0,0,0.6);
$mild-blue = #4A90E2;
$header-height = 70px;
$h1-margin-top = 15px;
$green = #b3c89b;

body {
  background-color: $background-color;
  color: $normal-text;
  font-family: helvetica, sans-serif;
  margin: 0;
}

a {
  color: $mild-blue;
}

.global-wrapper {
  display: flex;
  margin: 0 auto;
  width: 1400px;
}

.filters {
  background-color: $green;
  margin-right: 30px;
  padding: ($header-height + $h1-margin-top) 40px 0;
  width: 250px;

  ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  li {
    margin-bottom: 10px;
  }

  a {
    color: $normal-text;
    font-size: 14px;
    font-weight: bold;
    text-decoration: none;
  }
}

.primary-header {
  height: $header-height;

  h1 {
    font-size: 20px;
    font-weight: 200;
    margin-top: $h1-margin-top;
  }
}

.primary-header-link {
  text-decoration: none;

  &:hover {
    border-bottom: 1px solid $mild-blue;
  }
}

.chart-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

/*
  Workaround for this issue:
  https://github.com/yang-wei/rd3/issues/45
*/
.rd3-chart {
  overflow: visible;
}

.rd3-chart-title {
  margin-top: 0;
}

.rd3-basic-chart {
  margin-bottom: 20px;
}
