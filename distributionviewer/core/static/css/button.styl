@import 'lib';

$btn-height = 25px;
.button {
  background-color: #00224a;
  border-radius: 3px;
  color: #fff;
  cursor: pointer;
  font-size: 12px;
  font-weight: 200;
  height: $btn-height;
  line-height: $btn-height;
  padding: 0 15px;

  &:hover {
    background-color: $mild-blue;
    color: $normal-text;
  }
}
